    <script>
        let uploadedImage = null;
        let model3D = null;
        let slicedFile = null;
        let processingState = 'idle'; // idle, converting, slicing, complete
        let conversionTimeout = null;
        let conversionStartTime = null;

        // Upload handling
        document.getElementById('uploadArea').addEventListener('click', () => {
            document.getElementById('fileInput').click();
        });

        document.getElementById('fileInput').addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;

            clearError();
            showStatus('Validating file...');

            // Simulate validation
            setTimeout(() => {
                if (!['image/jpeg', 'image/png'].includes(file.type)) {
                    showError('Unsupported format. Please upload JPEG or PNG only.');
                    return;
                }
                if (file.size > 20 * 1024 * 1024) {
                    showError('File too large. Maximum size is 20 MB.');
                    return;
                }

                const reader = new FileReader();
                reader.onload = (e) => {
                    uploadedImage = {
                        name: file.name,
                        src: e.target.result,
                        size: file.size
                    };

                    // Update UI
                    document.getElementById('fileName').textContent = file.name;
                    document.getElementById('fileName').style.display = 'block';
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('imageSize').textContent = (file.size / 1024 / 1024).toFixed(2) + ' MB';
                    document.getElementById('imageName').textContent = file.name;
                    document.getElementById('imagePreview').classList.add('active');
                    document.getElementById('convertBtn').style.display = 'block';
                    document.getElementById('emptyState').style.display = 'none';
                    
                    hideStatus();
                };
                reader.readAsDataURL(file);
            }, 500);
        });

        // Convert button
        document.getElementById('convertBtn').addEventListener('click', handleConvert);

        async function handleConvert() {
            if (!uploadedImage) return;

            clearError();
            processingState = 'converting';
            showStatus('Converting your image to 3D... This may take 60-120 seconds');
            document.getElementById('statusSpinner').style.display = 'block';
            conversionStartTime = Date.now();

            try {
                // Convert data URL to base64
                const base64Image = uploadedImage.src.split(',')[1];

                // Simulate progress while waiting for API
                let progressInterval = setInterval(() => {
                    if (progress < 95) {
                        updateProgress(progress + Math.random() * 10);
                    }
                }, 2000);

                console.log('Calling HuggingFace Spaces Hunyuan3D API...');

                // Call HuggingFace Spaces API
                const response = await fetch(
                    'https://tencent-hunyuan3d-2-1.hf.space/call/infer',
                    {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            data: [
                                base64Image,        // image as base64
                                '',                 // no text prompt for image-to-3d
                                'None',             // negative prompt
                                1,                  // guidance scale
                                'generate'          // mode
                            ]
                        })
                    }
                );

                clearInterval(progressInterval);

                if (!response.ok) {
                    throw new Error(`API error: ${response.status} ${response.statusText}`);
                }

                const result = await response.json();
                console.log('API Response:', result);

                const elapsed = Date.now() - conversionStartTime;

                // HuggingFace returns: { data: [glb_url, ...] }
                const glbUrl = result.data[0];

                model3D = {
                    id: 'model_' + Date.now(),
                    name: 'converted_model.glb',
                    format: 'GLB',
                    dimensions: { x: 100, y: 100, z: 100 },
                    fileSize: 5.2,
                    conversionTime: elapsed,
                    modelUrl: glbUrl
                };

                updateProgress(100);
                document.getElementById('modelFormat').textContent = 'GLB';
                document.getElementById('modelDimensions').textContent = 
                    `${model3D.dimensions.x}√ó${model3D.dimensions.y}√ó${model3D.dimensions.z}mm`;
                document.getElementById('conversionTime').textContent = 
                    (elapsed / 1000).toFixed(1) + 's';

                processingState = 'complete';
                hideStatus();
                document.getElementById('modelSection').classList.add('active');
                document.getElementById('convertBtn').style.display = 'none';

            } catch (error) {
                console.error('Conversion error:', error);
                showError('Conversion failed: ' + error.message + '. The HuggingFace queue might be full. Try again in a moment.');
                processingState = 'error';
            }
        }

        function handleSlice() {
            if (!model3D) return;

            clearError();
            processingState = 'slicing';
            document.getElementById('modelSection').style.display = 'none';
            showStatus('Slicing model...');
            document.getElementById('statusTitle').textContent = 'Slicing model...';
            document.getElementById('statusSpinner').style.display = 'block';

            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += Math.random() * 40;
                if (progress >= 95) {
                    progress = 95;
                    clearInterval(progressInterval);
                }
                updateProgress(progress);
            }, 200);

            setTimeout(() => {
                clearInterval(progressInterval);

                const layerHeight = document.getElementById('layerHeight').value;
                const infill = document.getElementById('infill').value;

                slicedFile = {
                    id: 'sliced_' + Date.now(),
                    name: `print_${layerHeight}mm_${infill}inf.3mf`,
                    format: '3MF',
                    fileSize: 3.8,
                    settings: {
                        layerHeight,
                        infill,
                        printerProfile: document.getElementById('printerProfile').value
                    }
                };

                updateProgress(100);
                document.getElementById('slicedFileName').textContent = slicedFile.name;
                document.getElementById('slicedFormat').textContent = slicedFile.format;
                document.getElementById('slicedSize').textContent = slicedFile.fileSize + ' MB';

                processingState = 'complete';
                hideStatus();
                document.getElementById('successSection').classList.add('active');
            }, 1500);
        }

        function toggleSettings() {
            document.getElementById('settingsPanel').classList.toggle('active');
        }

        function updateSettingsDisplay() {
            document.getElementById('displayLayerHeight').textContent = 
                document.getElementById('layerHeight').value + ' mm';
            document.getElementById('displayInfill').textContent = 
                document.getElementById('infill').value + '%';
            document.getElementById('displayPrinter').textContent = 
                document.getElementById('printerProfile').value.toUpperCase();
        }

        function showStatus(title) {
            document.getElementById('statusTitle').textContent = title;
            document.getElementById('statusSection').classList.add('active');
            updateProgress(0);
        }

        function hideStatus() {
            document.getElementById('statusSection').classList.remove('active');
        }

        function updateProgress(value) {
            document.getElementById('progressFill').style.width = value + '%';
            document.getElementById('progressText').textContent = Math.round(value);
        }

        function showError(message) {
            document.getElementById('errorText').textContent = message;
            document.getElementById('errorMessage').classList.add('active');
            processingState = 'error';
            hideStatus();
        }

        function clearError() {
            document.getElementById('errorMessage').classList.remove('active');
        }

        function dismissError() {
            clearError();
            processingState = 'idle';
        }

        function cancelOperation() {
            if (conversionTimeout) clearTimeout(conversionTimeout);
            processingState = 'idle';
            hideStatus();
        }

        function generateBinarySTL() {
            // Create a simple cube with proper binary STL format
            // Binary STL header (80 bytes) + triangle count (4 bytes) + triangles
            
            const header = new ArrayBuffer(80);
            const headerView = new Uint8Array(header);
            const headerText = "3D Forge Generated Model - Binary STL Format";
            for (let i = 0; i < Math.min(headerText.length, 80); i++) {
                headerView[i] = headerText.charCodeAt(i);
            }

            // Define a cube with 12 triangles (2 per face)
            const triangles = [
                // Bottom face (z=0)
                {n: [0, 0, -1], v: [[0, 0, 0], [100, 0, 0], [100, 100, 0]]},
                {n: [0, 0, -1], v: [[0, 0, 0], [100, 100, 0], [0, 100, 0]]},
                // Top face (z=80)
                {n: [0, 0, 1], v: [[0, 0, 80], [0, 100, 80], [100, 100, 80]]},
                {n: [0, 0, 1], v: [[0, 0, 80], [100, 100, 80], [100, 0, 80]]},
                // Front face (y=0)
                {n: [0, -1, 0], v: [[0, 0, 0], [0, 0, 80], [100, 0, 80]]},
                {n: [0, -1, 0], v: [[0, 0, 0], [100, 0, 80], [100, 0, 0]]},
                // Back face (y=100)
                {n: [0, 1, 0], v: [[0, 100, 0], [100, 100, 0], [100, 100, 80]]},
                {n: [0, 1, 0], v: [[0, 100, 0], [100, 100, 80], [0, 100, 80]]},
                // Left face (x=0)
                {n: [-1, 0, 0], v: [[0, 0, 0], [0, 100, 0], [0, 100, 80]]},
                {n: [-1, 0, 0], v: [[0, 0, 0], [0, 100, 80], [0, 0, 80]]},
                // Right face (x=100)
                {n: [1, 0, 0], v: [[100, 0, 0], [100, 0, 80], [100, 100, 80]]},
                {n: [1, 0, 0], v: [[100, 0, 0], [100, 100, 80], [100, 100, 0]]}
            ];

            // Build binary STL
            const triangleCount = triangles.length;
            const totalSize = 80 + 4 + (triangleCount * 50); // header + count + (50 bytes per triangle)
            const buffer = new ArrayBuffer(totalSize);
            const view = new DataView(buffer);

            // Copy header
            const headerBytes = new Uint8Array(header);
            const bufferBytes = new Uint8Array(buffer);
            bufferBytes.set(headerBytes, 0);

            // Write triangle count (little-endian)
            view.setUint32(80, triangleCount, true);

            // Write triangles
            let offset = 84;
            for (let i = 0; i < triangles.length; i++) {
                const tri = triangles[i];
                
                // Normal vector (3 floats = 12 bytes)
                view.setFloat32(offset, tri.n[0], true);
                view.setFloat32(offset + 4, tri.n[1], true);
                view.setFloat32(offset + 8, tri.n[2], true);
                offset += 12;

                // Vertices (3 vertices √ó 3 floats = 36 bytes)
                for (let v = 0; v < 3; v++) {
                    view.setFloat32(offset, tri.v[v][0], true);
                    view.setFloat32(offset + 4, tri.v[v][1], true);
                    view.setFloat32(offset + 8, tri.v[v][2], true);
                    offset += 12;
                }

                // Attribute byte count (2 bytes, usually 0)
                view.setUint16(offset, 0, true);
                offset += 2;
            }

            return buffer;
        }

        async function downloadFile() {
            if (!slicedFile || !model3D) return;
            
            try {
                showStatus('Downloading your 3D model...');
                
                // Fetch the GLB file from HuggingFace
                const response = await fetch(model3D.modelUrl);
                if (!response.ok) {
                    throw new Error('Failed to download model');
                }
                
                const blob = await response.blob();
                
                // Create download link
                const url = window.URL.createObjectURL(blob);
                const link = document.createElement('a');
                link.href = url;
                link.download = model3D.name;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                window.URL.revokeObjectURL(url);
                
                hideStatus();
                console.log('Downloaded:', model3D.name);
            } catch (error) {
                showError('Download failed: ' + error.message);
            }
        }

        function startOver() {
            uploadedImage = null;
            model3D = null;
            slicedFile = null;
            processingState = 'idle';

            document.getElementById('fileInput').value = '';
            document.getElementById('fileName').style.display = 'none';
            document.getElementById('imagePreview').classList.remove('active');
            document.getElementById('convertBtn').style.display = 'none';
            document.getElementById('modelSection').classList.remove('active');
            document.getElementById('successSection').classList.remove('active');
            document.getElementById('settingsPanel').classList.remove('active');
            document.getElementById('emptyState').style.display = 'block';
            document.getElementById('statusSection').classList.remove('active');
            clearError();
        }
    </script>
</body>
</html>
